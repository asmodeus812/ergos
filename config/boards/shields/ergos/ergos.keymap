#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define STRINGIFY(x) #x
#define EXPAND_AND_STRINGIFY(x) STRINGIFY(x)

#define KEYS_NONE

#define KEYS_LEFT 0 1 2 3 4 5 \
                  12 13 14 15 16 17 \
                  24 25 26 27 28 29 \
                  36 37 38 39 40 41 \
                  52 53 54 55

#define KEYS_RIGHT 6 7 8 9 10 11 \
                   18 19 20 21 22 23 \
                   30 31 32 33 34 35 \
                   46 47 48 49 50 51 \
                   62 63 64 65

#define THUMBS_LEFT 42 43 56 57 58 66

#define THUMBS_RIGHT 44 45 59 60 61 67

#define THUMBS THUMBS_LEFT THUMBS_RIGHT

#define HMT(ID, NAME, TERM, KEYS) \
    ID: mod_tap_##ID  { \
        compatible = "zmk,behavior-hold-tap"; \
        label = NAME; \
        tapping-term-ms = <TERM>; \
        flavor = "tap-preferred"; \
        #binding-cells = <2>; \
        bindings = <&kp>, <&kp>; \
        hold-trigger-key-positions = <KEYS>; \
    };

#define HMH(ID, NAME, TERM, KEYS) \
    ID: layer_tap_##ID { \
        compatible = "zmk,behavior-hold-tap"; \
        label = NAME; \
        tapping-term-ms = <TERM>; \
        flavor = "tap-preferred"; \
        #binding-cells = <2>; \
        bindings = <&mo>, <&kp>; \
        hold-trigger-key-positions = <KEYS>; \
    };

#define HML(ID, NAME, TERM, KEYS) \
    ID: layer_hold_##ID { \
        compatible = "zmk,behavior-hold-tap"; \
        label = NAME; \
        #binding-cells = <2>; \
        quick-tap-ms = <155>; \
        tapping-term-ms = <TERM>; \
        flavor = "hold-preferred"; \
        bindings = <&mo>, <&kp>; \
        hold-trigger-key-positions = <KEYS>; \
    };

&caps_word {
    continue-list = <UNDERSCORE SEMI PIPE AMPS MINUS BACKSPACE DELETE LSHFT RSHFT>;
};

/ {
    behaviors {
        #include "macros.dtsi"
        #include "version.dtsi"

        HML(hmo, "LAYER_HOLD", 200, KEYS_NONE)
        HMH(hmlr, "LAYER_TAP_LEFT", 150, KEYS_NONE)
        HMH(hmll, "LAYER_TAP_RIGHT", 150, KEYS_NONE)

        HMT(hmt, "MODS_THUMB", 150, KEYS_NONE)
        HMT(hmr, "MODS_RIGHT", 150, KEYS_LEFT THUMBS_LEFT)
        HMT(hml, "MODS_LEFT",  150, KEYS_RIGHT THUMBS_RIGHT)

        HMT(hmrs, "MODS_RIGHT_SLOW", 180, KEYS_LEFT)
        HMT(hmls, "MODS_LEFT_SLOW",  180, KEYS_RIGHT)

        hmc: homerow_mods_caps {
                compatible = "zmk,behavior-hold-tap";
                label = "HOMEROW_MODS_CAPS";
                tapping-term-ms = <125>;
                flavor = "hold-preferred";
                #binding-cells = <2>;
                bindings = <&kp>, <&caps_word>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                &kp PSCRN  &kp N1      &kp N2    &kp N3   &kp  N4      &kp N5                                                               &kp N6    &kp  N7      &kp N8    &kp N9   &kp N0        &kp PSCRN
                &kp CAPS   &kp Q       &kp W     &kp E    &kp  R       &kp T                                                                &kp Y     &kp  U       &kp I     &kp O    &kp P         &kp DEL
                &kp TAB    &kp A       &kp S     &kp D    &hml LSHFT F &kp G                                                                &kp H     &hmr LSHFT J &kp K     &kp L    &kp SEMI      &kp SQT
                &kp LSHFT  &kp Z       &kp X     &kp C    &kp  V       &kp B     &hmt LALT  TAB &hmt LGUI CAPS &hmt LGUI DEL &hmt RALT  SQT   &kp N     &kp M        &kp COMMA &kp DOT  &kp FSLH      &kp RSHFT
                           &caps_word  &kp GRAVE &kp BSLH &kp  EQUAL   &kp SPACE &hmt LCTRL ESC &hmo 3 HOME    &hmo 2 PG_UP  &hmt RCTRL ENTER &kp BSPC  &kp MINUS    &kp LBKT  &kp RBKT &hmt RGUI DEL
                                                                                                &hmo 1 END     &hmo 1 PG_DN
